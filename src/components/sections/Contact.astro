<script>
  const form = document.getElementById("contact-form");
  const status = document.getElementById("form-status");

  if (form instanceof HTMLFormElement && status instanceof HTMLElement) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);

      const response = await fetch("https://formspree.io/f/xwvvoppq", {
        method: "POST",
        body: formData,
        headers: {
          Accept: "application/json",
        },
      });

      status.classList.remove("hidden");

      if (response.ok) {
        form.reset();
        status.textContent =
          "Mensaje enviado correctamente. Te voy a responder pronto ðŸ™‚";
      } else {
        status.textContent =
          "Hubo un error al enviar el mensaje. ProbÃ¡ de nuevo.";
      }
    });
  }
</script>
